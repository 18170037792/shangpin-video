<view>
    <view class="login-icon">
        <image class="login-img" src="../resource/images/banner.png"></image>
    </view>
    <view class="login-from">
        <form bindsubmit='doLogin'>
            <!--账号-->
            <view class="inputView">
                <image class="nameImage" src="../resource/images/username.png"></image>
                <label class="loginLabel">账号</label>
                <input name="username" class="inputText" placeholder="请输入登录账号" />
            </view>
            <view class="line"></view>

            <!--密码-->
            <view class="inputView">
                <image class="keyImage" src="../resource/images/password.png"></image>
                <label class="loginLabel">密码</label>
                <input name="password" class="inputText" password="true" placeholder="请输入登录密码" />
            </view>

            <!--按钮-->

            <view>
                <button class="loginBtn"  form-type='submit'>账号登录</button>
            </view>
            <view>
                <button class="authorizeBtn" type="primary" open-type='getUserInfo' bindgetuserinfo='doLogin'>立即使用</button>
            </view>
        </form>
    </view>
</view>